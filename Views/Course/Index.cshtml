@{
    ViewData["Title"] = "Courses";
    var count = ViewBag.Count;
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form" id="search">
                    <input type="text" placeholder="Search..." class="input-search" value="search" />
                    <button type="submit">search</button>
                    @* </form> *@
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("Course", count)
    </div>
</div>
<!-- Course End -->
