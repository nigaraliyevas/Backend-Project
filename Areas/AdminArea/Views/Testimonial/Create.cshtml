@using EduHome.Areas.AdminArea.ViewModel.Testimonial
@model TestimonialCreateVM
@{
    ViewBag.Title = "Create Testimonial";
}

<h2>Create Testimonial</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control border-input" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position" class="control-label"></label>
        <input asp-for="Position" class="form-control border-input" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Desc" class="control-label"></label>
        <textarea asp-for="Desc" class="form-control border-input"></textarea>
        <span asp-validation-for="Desc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageURLUpload" class="control-label">Upload Image</label>
        <input asp-for="ImageURLUpload" class="form-control-file border-input" type="file" />
        <span asp-validation-for="ImageURLUpload" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
