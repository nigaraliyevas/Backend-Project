@model IEnumerable<Testimonial>

@{
    ViewBag.Title = "Testimonials";
}

<h2>Testimonials</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Position</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var testimonial in Model)
        {
            <tr>
                <td>
                    <img src="~/img/testimonial/@testimonial.ImageURL" alt="@testimonial.Name" style="width:100px;height:100px;" />
                </td>
                <td>@testimonial.Name</td>
                <td>@testimonial.Position</td>
                <td>@testimonial.Desc</td>
                <td>
                    <a href="@Url.Action("Detail", "Testimonial", new { id = testimonial.Id })" class="btn btn-outline-success"><i class="fa-solid fa-pen-to-square fa-2xl"></i></a>
                    <a href="@Url.Action("Update", "Testimonial", new { id = testimonial.Id })" class="btn btn-outline-warning"><i class="fa-solid fa-circle-info fa-2xl"></i></a>
                    <a href="@Url.Action("Delete", "Testimonial", new { id = testimonial.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this testimonial?');"><i class="fa-solid fa-trash fa-2xl"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Testimonial")" class="btn btn-success">Create</a>
