@using EduHome.Areas.AdminArea.ViewModel.Course
@model CourseUpdateVM

@{
    ViewData["Title"] = "Update Course";
}


<div class="px-5">
    <h4>Course</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <div class="d-flex">
                <div class="border-input">
                    <img src="~/img/course/@Model.CourseImages?.FirstOrDefault(s=>s.IsMain)?.ImageURL" alt="" width="200" />
                    <h6>Main Image</h6>
                </div>
                @if (Model.CourseImages is not null)
                {
                    @foreach (var img in Model.CourseImages)
                    {
                        if (!img.IsMain)
                        {
                            <div class="border-input">
                                <img src="~/img/course/@img.ImageURL" alt="" width="100" />
                                <a class="d-block btn btn-danger p-1" asp-action="deleteImage" asp-route-id="@img.Id">Delete</a>
                            </div>
                        }
                    }
                }
            </div>
            <form asp-action="update" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ImageURLUpload" class="control-label"></label>
                    <input asp-for="ImageURLUpload" class="form-control border-input" />
                    <span asp-validation-for="ImageURLUpload" class="text-danger"></span>
                </div><div class="form-group">
                    <label asp-for="Desc" class="control-label"></label>
                    <textarea asp-for="Desc" class="form-control border-input"></textarea>
                    <span asp-validation-for="Desc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShortDesc" class="control-label"></label>
                    <textarea asp-for="ShortDesc" class="form-control border-input"></textarea>
                    <span asp-validation-for="ShortDesc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="About" class="control-label"></label>
                    <textarea asp-for="About" class="form-control border-input"></textarea>
                    <span asp-validation-for="About" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Apply" class="control-label"></label>
                    <textarea asp-for="Apply" class="form-control border-input"></textarea>
                    <span asp-validation-for="Apply" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Certification" class="control-label"></label>
                    <textarea asp-for="Certification" class="form-control border-input"></textarea>
                    <span asp-validation-for="Certification" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control border-input" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" class="form-control border-input" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClassDuration" class="control-label"></label>
                    <input asp-for="ClassDuration" class="form-control border-input" />
                    <span asp-validation-for="ClassDuration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SkillLevel" class="control-label"></label>
                    <input asp-for="SkillLevel" class="form-control border-input" />
                    <span asp-validation-for="SkillLevel" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Language" class="control-label"></label>
                    <input asp-for="Language" class="form-control border-input" />
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentCount" class="control-label"></label>
                    <input asp-for="StudentCount" class="form-control border-input" />
                    <span asp-validation-for="StudentCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Assesments" class="control-label"></label>
                    <input asp-for="Assesments" class="form-control border-input" />
                    <span asp-validation-for="Assesments" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseFee" class="control-label"></label>
                    <input asp-for="CourseFee" class="form-control border-input" />
                    <span asp-validation-for="CourseFee" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Categories" class="control-label">Categories</label>
                    <select asp-for="SelectedCategoryIds" class="form-control border-input" asp-items="ViewBag.Categories" multiple="multiple"></select>
                </div>
                <div class="form-group">
                    <label for="Tags" class="control-label">Tags</label>
                    <select asp-for="SelectedTagIds" class="form-control border-input" asp-items="ViewBag.Tags" multiple="multiple"></select>
                </div>
                <div class="test">
                    <button class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
