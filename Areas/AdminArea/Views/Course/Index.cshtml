@model IEnumerable<Course>

@{
    ViewData["Title"] = "Courses";
}


<div class="container-lg">
    <div class="w-100">

        <h1>Courses</h1>

        <p>
            <a asp-action="Create" class="btn btn-primary">Create</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(item => item.CourseImages)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Desc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ShortDesc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.About)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apply)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Certification)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseFeatures.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseFeatures.Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseCategories)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseFeatures.CourseFee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/img/course/@item.CourseImages.FirstOrDefault(i=>i.IsMain)?.ImageURL" alt="Alternate Text" width="200" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Desc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortDesc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.About)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apply)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Certification)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseFeatures.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseFeatures.Duration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseCategories.FirstOrDefault(s => s.CourseId == item.Id).Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseFeatures.CourseFee)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            <a class="btn btn-outline-success" asp-action="update" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square fa-2xl"></i></a> |
                            <a class="btn btn-outline-warning" asp-action="Detail" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info fa-2xl"></i></a> |
                            <a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash fa-2xl"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
