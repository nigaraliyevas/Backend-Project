@model IEnumerable<ChooseContent>
@{
    ViewData["Title"] = "Index";
}
<div class="px-5 w-100">

    <p class="text-end py-3 px-2">
        <a asp-action="Create" class="btn btn-success">Create</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Header)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageURL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BgImageURL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th class="text-center">Settings</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Header)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <img src="~/img/choose/@item.ImageURL" alt="" width="100" />
                    </td>
                    <td>
                        <img src="~/img/choose/@item.BgImageURL" alt="" width="200" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="update" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square fa-2xl"></i></a> |
                        <a class="btn btn-outline-warning" asp-action="Detail" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info fa-2xl"></i></a> |
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash fa-2xl"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

